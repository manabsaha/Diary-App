<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/notebg"
    android:id="@+id/diaryViewLayout"
    tools:context="com.infiam.keepdiary.ViewDiaryActivity">

    <include
        android:id="@+id/diaryViewToolbar"
        layout="@layout/top_toolbar"/>

    <TextView
        android:id="@+id/diaryTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="25sp"
        android:layout_margin="10dp"
        android:textIsSelectable="true"
        android:layout_below="@+id/diaryViewToolbar"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_below="@+id/diaryTitle">

        <TextView
            android:id="@+id/diaryNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textIsSelectable="true"
            android:textSize="20sp"/>

    </ScrollView>

</RelativeLayout>
